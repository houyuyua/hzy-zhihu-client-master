<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.client_zhihu_hzy.Activity.MyAnswerActivity"
    tools:ignore="MissingConstraints">



    <TextView
        android:id="@+id/tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="4"
        android:minLines="2"
        android:text="回答详情"
        android:textSize="20dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <Button
        android:id="@+id/bt_HowManyAgree"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#1586DF"
        android:text="赞同回答人数"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_EditAnswer"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutUser" />

    <Button
        android:id="@+id/bt_EditAnswer"
        android:layout_width="238dp"
        android:layout_height="45dp"
        android:layout_marginTop="5dp"
        android:background="#1586DF"
        android:text="编辑回答"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toRightOf="@+id/bt_HowManyAgree"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutUser" />



    <LinearLayout
        android:id="@+id/linearLayoutUser"
        app:layout_constraintTop_toBottomOf="@id/tv_Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">



        <ImageButton
            android:id="@+id/ib_head"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:src="@drawable/xhzy"
            />

        <TextView
            android:id="@+id/tv_UserName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:textSize="16dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>


    </LinearLayout>


    <TextView
        android:id="@+id/tv_describe"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="回答描述"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:layout_marginTop="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_HowManyAgree"
        app:layout_constraintVertical_bias="1.0"
        tools:layout_editor_absoluteX="0dp" />






