<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.client_zhihu_hzy.Activity.EditQuestionActivity"
    tools:ignore="MissingConstraints"
    >

    <TextView
        android:id="@+id/tvEditTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入问题的标题："
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintVertical_bias="0.022" />

    <EditText
        android:id="@+id/etEditTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/shape_edit"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:hint="请在此处输入您问题的内容"
        android:textSize="16sp"

        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditTitle"
        android:minLines="2"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/tvEditDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="请输入问题的内容："
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintHorizontal_bias="0.056"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etEditTitle"
        app:layout_constraintVertical_bias="0.039" />

    <EditText
        android:id="@+id/etEditDesc"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/shape_edit"
        android:gravity="top"
        android:hint="请在此处输入您问题的content内容"
        android:maxLines="20"
        android:minLines="15"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditDesc" />

    <Button
        android:id="@+id/btDelete"
        android:layout_width="104dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="9dp"
        android:layout_marginRight="9dp"
        android:layout_marginBottom="256dp"
        android:background="@drawable/button_drawable"
        android:text="删除"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnLogin"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btSave"
        android:layout_width="99dp"
        android:layout_height="46dp"
        android:background="@drawable/button_drawable"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="16dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/btDelete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnReg" />









</androidx.constraintlayout.widget.ConstraintLayout>